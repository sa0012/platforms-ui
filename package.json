{
  "name": "platform-ui",
  "version": "1.0.0",
  "description": "A Component Library for Vue.js",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development npm run build:entry && webpack-dev-server --config build/webpack.demo.js",
    "build:entry": "cross-env npm run build:js && npm run build:style",
    "build:js": "cross-env node build/build-entry",
    "build:style": "cross-env node build/build-style-entry",
    "build:pkg": "cross-env NODE_ENV=production webpack --color --config build/webpack.pkg.js",
    "build:lib": "cross-env node build/build-lib.js",
    "lint": "eslint --ext .js,.vue src",
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "juckchen",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-syntax-jsx": "^7.7.4",
