    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^1.12.1",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "shelljs": "^0.8.3",
    "signale": "^1.4.0",
    "slugify": "^1.3.6",
    "style-loader": "^1.0.1",
    "transliteration": "^2.1.7",
